{
    "name": "eclipsephp/app",
    "description": "The skeleton application for the Eclipse platform.",
    "keywords": [
        "eclipse",
        "filament",
        "laravel"
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../"
        }
    ],
    "homepage": "https://github.com/datalinx/eclipsephp-app",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "DataLinx",
            "email": "info@datalinx.si"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Workbench\\App\\": "app/",
            "App\\": "app/",
            "Workbench\\Database\\Factories\\": "database/factories/",
            "Workbench\\Database\\Seeders\\": "database/seeders/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3",
        "eclipsephp/common": "dev-main",
        "eclipsephp/world-plugin": "@dev",
        "laravel/framework": "^11.31",
        "laravel/reverb": "^1.0",
        "laravel/tinker": "^2.9",
        "spatie/laravel-medialibrary": "^11.0",
        "spatie/laravel-permission": "^6.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.1",
        "soloterm/solo": "^0.5.0"
    },
    "scripts": {
        "pre-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    }
}
